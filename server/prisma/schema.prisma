// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ProductType {
  BARANG
  JASA
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  COMPLETED
  CANCELLED
  REFUND_REQUESTED
  REFUND_APPROVED
  REFUND_COMPLETED
  REFUND_REJECTED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  role          Role      @default(USER)
  isVerified    Boolean   @default(false)
  googleId      String?   @unique
  
  // Profile Additions
  avatar        String?
  phoneNumber   String?
  
  // Security
  resetToken        String?
  resetTokenExpiry  DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  otps          Otp[]
  orders        Order[]
  cartItems     CartItem[]
  messagesSent  Message[] @relation("SentMessages")
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  email     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Float
  discount    Float       @default(0)
  stock       Int         @default(0)
  type        ProductType @default(BARANG)
  images      String[]
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  cartItems   CartItem[]
  orderItems  OrderItem[]
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model Order {
  id            String      @id @default(cuid())
  invoiceNumber String      @unique
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  totalAmount   Float
  status        OrderStatus @default(PENDING)
  paymentType   String?
  snapToken     String?
  snapUrl       String?
  address       String?
  
  deliveryInfo  String?
  refundReason  String?
  refundAccount String?
  refundProof   String?
  
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Message {
  id        String   @id @default(cuid())
  content   String
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  isAdmin   Boolean  @default(false)
  isRead    Boolean  @default(false)
  targetUserId String? // Optional: Untuk tracking admin balas ke siapa
  createdAt DateTime @default(now())
}