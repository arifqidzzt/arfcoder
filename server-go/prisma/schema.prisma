// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ProductType {
  BARANG
  JASA
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  COMPLETED
  CANCELLED
  REFUND_REQUESTED
  REFUND_APPROVED
  REFUND_COMPLETED
  REFUND_REJECTED
}

enum DiscountType {
  PERCENT
  FIXED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  role          Role      @default(USER)
  isVerified    Boolean   @default(false)
  googleId      String?   @unique
  
  // Profile Additions
  avatar        String?
  phoneNumber   String?
  waBotNumber   String? // For Admin Bot identification
  
  // Security (2FA)
  resetToken        String?
  resetTokenExpiry  DateTime?
  twoFactorSecret   String?   
  twoFactorEnabled  Boolean   @default(false)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  otps          Otp[]
  orders        Order[]
  cartItems     CartItem[]
  messagesSent  Message[] @relation("SentMessages")
  reviews       Review[]
  activityLogs  ActivityLog[]
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String   
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  email     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Float
  discount    Float       @default(0)
  stock       Int         @default(0)
  type        ProductType @default(BARANG)
  images      String[]
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  cartItems   CartItem[]
  orderItems  OrderItem[]
  reviews     Review[]
  flashSales  FlashSale[]
  paymentMethods PaymentMethod[] @relation("ProductPaymentMethods")
}

model SystemConfig {
  key   String @id
  value String
}

model PaymentMethod {
  id        String    @id @default(cuid())
  code      String    @unique
  name      String
  type      String
  isActive  Boolean   @default(true)
  products  Product[] @relation("ProductPaymentMethods")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model Order {
  id            String      @id @default(cuid())
  invoiceNumber String      @unique
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  totalAmount   Float
  status        OrderStatus @default(PENDING)
  paymentType   String?
  snapToken     String?
  snapUrl       String?
  
  // Core API Fields
  paymentMethod   String? // e.g., "bca", "gopay"
  paymentCode     String? // VA Number or formatted code
  paymentUrl      String? // QR Image URL or Deep Link
  paymentExpiry   DateTime?

  deliveryInfo  String?
  refundReason  String?
  refundAccount String?
  refundProof   String?
  
  discountApplied Float     @default(0)
  voucherCode     String?

  items         OrderItem[]
  timeline      OrderTimeline[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model OrderTimeline {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  title       String   
  description String?
  timestamp   DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  isAdmin   Boolean  @default(false)
  isRead    Boolean  @default(false)
  targetUserId String? 
  createdAt DateTime @default(now())
}

model Voucher {
  id          String       @id @default(cuid())
  code        String       @unique
  type        DiscountType @default(FIXED)
  value       Float
  minPurchase Float        @default(0)
  maxDiscount Float?
  startDate   DateTime     @default(now())
  expiresAt   DateTime
  usageLimit  Int          @default(0) 
  usedCount   Int          @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
}

model FlashSale {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  discountPrice Float
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  rating    Int      
  comment   String?
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
}
